{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "websites/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start:hoprnet.io": "lerna exec --scope @hoprnet/hopr-website.hoprnet.io -- yarn start",
    "start:hoprnet.org": "lerna exec --scope @hoprnet/hopr-website.hoprnet.org -- yarn start",
    "clean": "lerna clean",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore websites/hoprnet.io,websites/hoprnet.org"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "8.0.6",
    "lerna": "^3.22.1",
    "webpack": "4.39.1"
  }
}
